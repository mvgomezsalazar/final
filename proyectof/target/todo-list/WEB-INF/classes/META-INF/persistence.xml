<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="demo-persistence-unit" transaction-type="JTA">
    <description>Forge Persistence Unit</description>
    <jta-data-source>jdbc/__default</jta-data-source>
    <class>model.Evento</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
      <property name="javax.persistence.schema-generation.scripts.action" value="drop-and-create"/>
      <property name="javax.persistence.schema-generation.scripts.create-target" value="demoCreate.ddl"/>
      <property name="javax.persistence.schema-generation.scripts.drop-target" value="demoDrop.ddl"/>
    </properties>
  </persistence-unit>
</persistence>
